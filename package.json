{
  "name": "unplugin-replace",
  "type": "module",
  "version": "0.6.2",
  "packageManager": "pnpm@10.26.0",
  "description": "A universal bundler plugin which replaces targeted strings in files.",
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/sxzz",
  "homepage": "https://github.com/unplugin/unplugin-replace#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unplugin/unplugin-replace.git"
  },
  "bugs": {
    "url": "https://github.com/unplugin/unplugin-replace/issues"
  },
  "keywords": [
    "unplugin",
    "rollup",
    "vite",
    "esbuild",
    "webpack"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./esbuild": "./dist/esbuild.mjs",
    "./farm": "./dist/farm.mjs",
    "./rolldown": "./dist/rolldown.mjs",
    "./rollup": "./dist/rollup.mjs",
    "./rspack": "./dist/rspack.mjs",
    "./vite": "./dist/vite.mjs",
    "./webpack": "./dist/webpack.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*.d.mts",
        "./*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "rolldown-string": "^0.2.1",
    "unplugin": "^2.3.11"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.4.3",
    "@sxzz/prettier-config": "^2.2.6",
    "@sxzz/test-utils": "^0.5.14",
    "@types/node": "^25.0.2",
    "bumpp": "^10.3.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "rolldown": "1.0.0-beta.54",
    "rollup": "^4.53.4",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.15",
    "webpack": "^5.103.0"
  },
  "prettier": "@sxzz/prettier-config"
}
